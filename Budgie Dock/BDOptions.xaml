<Window x:Class="BDOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BudgieDock Options" Height="379" Width="567" WindowStartupLocation="CenterScreen" xmlns:my="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna">
       <ScrollViewer>
         <StackPanel>
            <Label FontSize="20" FontWeight="Bold" Background="Orange" Foreground="White">Budgie Dock Options</Label>
            <StackPanel Orientation="Horizontal">
                <Label>Animation Scale</Label>
                <TextBox Width="40" CharacterCasing="Normal" Text="8" Name="asc"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Icon Size</Label>
                <TextBox Width="40" CharacterCasing="Normal" Text="40" Name="isz"></TextBox>
            </StackPanel>
            <Button Name="restartapp">Restart</Button>
        </StackPanel>
    </ScrollViewer>
</Window>
