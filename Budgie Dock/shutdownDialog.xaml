<Window x:Class="shutdownDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Shutdown" Height="300" Width="600" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label HorizontalAlignment="Center" FontSize="24" Margin="15">Shutdown</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontSize="18" Background="Transparent" BorderThickness="0" Margin="8" Name="shutdown">Shutdown</Button>
            <Button FontSize="18" Background="Transparent" BorderThickness="0" Margin="8" Name="restart">Restart</Button>
            <Button FontSize="18" Background="Transparent" BorderThickness="0" Margin="8" Name="logoff">Logoff</Button>
            <Button FontSize="18" Background="Transparent" BorderThickness="0" Margin="8" Name="hibernate">Hibernate</Button>
        </StackPanel>
        <Button FontSize="18" Background="Transparent" BorderThickness="0" Margin="8" Name="cancel" HorizontalAlignment="Center">Cancel</Button>
    </StackPanel>
</Window>
